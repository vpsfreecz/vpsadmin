# http://editorconfig.org
root = true

[*]
charset = utf-8
end_of_line = lf
trim_trailing_whitespace = true

[*.php]
indent_size = 4
indent_style = space

[*.rb]
indent_size = 2
indent_style = space

[*.js]
indent_size = 2
indent_style = tab

[*.html]
indent_size = 4
indent_style = space

[*.erb]
indent_size = 2
indent_style = space
