# This file is generated by vpsAdmin. Do not edit this file, all
# changes will be lost. To stop vpsAdmin from manipulating this file, run
#
#   chmod u-w /etc/netctl/<%= netif.name %>

Description="vpsAdmin network configuration for <%= netif.name %>"
Interface=<%= netif.name %>
BindToInterfaces=()
Connection=ethernet
ForceConnect=yes

<% netif.active_ip_versions.each do |v| -%>
<% all_ips = netif.ips(v) -%>
<% if v == 4 -%>
IP=static
Address=( <%= all_ips.map { |addr| "\"#{addr.to_string}\"" }.join(' ') %> )
Routes=( "<%= netif.default_via(v) %> dev <%= netif.name %>" "default via <%= netif.default_via(v) %> dev <%= netif.name %>" )
<% elsif v == 6 -%>
IP6=static
Address6=( <%= all_ips.map { |addr| "\"#{addr.to_string}\"" }.join(' ') %> )
Routes6=( "<%= netif.default_via(v) %> dev <%= netif.name %>" "default via <%= netif.default_via(v) %> dev <%= netif.name %>" )
<% end %>
<% end -%>
