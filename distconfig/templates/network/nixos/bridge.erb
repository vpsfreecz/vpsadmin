<% [4, 6].each do |v| -%>

<% netif.ips(v).each do |addr| -%>
  ip -<%= v %> addr <%= op %> <%= addr.to_string %> dev <%= netif.name %> &> /dev/null || true
<% end -%>

<% if !netif.dhcp && netif.has_gateway?(v) -%>
  ip -<%= v %> route <%= op %> default via <%= netif.gateway(v) %> dev <%= netif.name %> <%= op == "del" ? '|| true' : ''  %>
<% end -%>

<% end -%>
