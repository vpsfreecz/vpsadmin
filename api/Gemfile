group :test do
  gem 'rspec'
end

group :development do
  gem 'pry'
  gem 'yard'
end

Dir.glob(File.expand_path("../plugins/*", File.realpath(__FILE__))) do |v|
  path = File.join(v, 'api', 'Gemfile')
  next unless File.exists?(path)

  eval_gemfile path
end
